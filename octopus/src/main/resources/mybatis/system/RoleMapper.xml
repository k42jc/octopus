<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dafy.octopus.auth.mapper.RoleMapper" >
  <resultMap id="BaseResultMap" type="com.dafy.octopus.web.core.dto.Role" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="code" property="code" jdbcType="VARCHAR" />
    <result column="role_name" property="roleName" jdbcType="VARCHAR" />
    <result column="status" property="status" jdbcType="CHAR" />
    <result column="desc" property="desc" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
  </resultMap>
  <!-- 角色信息关联查询-->
  <resultMap id="RoleInfosMap" type="com.dafy.octopus.web.core.dto.Role" extends="BaseResultMap">
    <collection property="userList" ofType="com.dafy.octopus.web.core.dto.User">
      <id column="u_id" property="id" jdbcType="BIGINT" />
      <result column="user_code" property="userCode" jdbcType="VARCHAR" />
      <result column="username" property="userName" jdbcType="VARCHAR" />
      <result column="phoneNo" property="phoneNo" jdbcType="VARCHAR" />
      <result column="email" property="email" jdbcType="VARCHAR" />
      <result column="pwd" property="pwd" jdbcType="VARCHAR" />
      <result column="u_status" property="status" jdbcType="CHAR" />
      <result column="u_create_time" property="createTime" jdbcType="TIMESTAMP" />
      <result column="u_update_time" property="updateTime" jdbcType="TIMESTAMP" />
    </collection>
    <collection property="permissionList" ofType="com.dafy.octopus.web.core.dto.Permission">
      <id column="p_id" property="id" jdbcType="BIGINT" />
      <id column="p_iparentId" property="parentId" jdbcType="BIGINT" />
      <result column="p_code" property="pCode" jdbcType="VARCHAR" />
      <result column="p_name" property="pName" jdbcType="VARCHAR" />
      <result column="p_desc" property="desc" jdbcType="VARCHAR" />
      <result column="p_icreate_time" property="createTime" jdbcType="TIMESTAMP" />
      <result column="p_iupdate_time" property="updateTime" jdbcType="TIMESTAMP" />
    </collection>
  </resultMap>
  <resultMap id="RoleInfos" type="com.dafy.octopus.web.core.dto.Role" extends="BaseResultMap">
    <result column="userCount" property="userCount"/>
    <result column="permissions" property="permissions" />
  </resultMap>
  <select id="findRoleInfos" resultMap="RoleInfosMap">
    select r.*,
    u.id u_id,u.user_code,u.username,u.phoneNo,u.email,
    p.id p_id,p.parentId p_iparentId,p.p_code,p.p_name ,p.desc p_desc
    from T_ROLE r
    left join T_USER_ROLE ur on r.id=ur.role_id
    left join T_USER u on ur.user_id=u.id and u.status=1
    left join T_ROLE_PERMISSION rp on r.id=rp.role_id
    left join T_PERMISSION p on rp.permission_id=p.id
    /*where r.status=1*/
  </select>
  <select id="findRoles" resultMap="RoleInfos">
    select r.*,(select count(1) from T_USER_ROLE ur where ur.role_id=r.id) userCount,
    GROUP_CONCAT(rp.permission_id) permissions
    from T_ROLE r
    left join T_ROLE_PERMISSION rp on r.id=rp.role_id
    GROUP BY r.id
  </select>
  <sql id="Base_Column_List" >
    id,code, role_name, status, desc, create_time, update_time
  </sql>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select 
    <include refid="Base_Column_List" />
    from T_ROLE
    where id = #{id,jdbcType=BIGINT}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long" >
    delete from T_ROLE
    where id = #{id,jdbcType=BIGINT}
  </delete>
  <insert id="insert" parameterType="com.dafy.octopus.web.core.dto.Role" >
    insert into T_ROLE (id, role_name, status, 
      `desc`, create_time, update_time
      )
    values (#{id,jdbcType=BIGINT}, #{roleName,jdbcType=VARCHAR}, #{status,jdbcType=CHAR}, 
      #{desc,jdbcType=VARCHAR}, #{createTime,jdbcType=TIMESTAMP}, #{updateTime,jdbcType=TIMESTAMP}
      )
  </insert>
  <insert id="insertSelective" parameterType="com.dafy.octopus.web.core.dto.Role" keyColumn="id" keyProperty="id">
    insert into T_ROLE
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        id,
      </if>
      <if test="code != null" >
        code,
      </if>
      <if test="roleName != null" >
        role_name,
      </if>
      <if test="status != null" >
        status,
      </if>
      <if test="desc != null" >
        `desc`,
      </if>
      <if test="createTime != null" >
        create_time,
      </if>
      <if test="updateTime != null" >
        update_time,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        #{id,jdbcType=BIGINT},
      </if>
      <if test="code != null" >
        #{code,jdbcType=VARCHAR},
      </if>
      <if test="roleName != null" >
        #{roleName,jdbcType=VARCHAR},
      </if>
      <if test="status != null" >
        #{status,jdbcType=CHAR},
      </if>
      <if test="desc != null" >
        #{desc,jdbcType=VARCHAR},
      </if>
      <if test="createTime != null" >
        #{createTime,jdbcType=TIMESTAMP},
      </if>
      <if test="updateTime != null" >
        #{updateTime,jdbcType=TIMESTAMP},
      </if>
    </trim>
    <selectKey resultType="java.lang.Long" keyProperty="id" order="AFTER">
      SELECT LAST_INSERT_ID()
    </selectKey>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.dafy.octopus.web.core.dto.Role" >
    update T_ROLE
    <set >
      <if test="roleName != null" >
        role_name = #{roleName,jdbcType=VARCHAR},
      </if>
      <if test="status != null" >
        status = #{status,jdbcType=CHAR},
      </if>
      <if test="desc != null" >
        `desc` = #{desc,jdbcType=VARCHAR},
      </if>
      <if test="createTime != null" >
        create_time = #{createTime,jdbcType=TIMESTAMP},
      </if>
      <if test="updateTime != null" >
        update_time = #{updateTime,jdbcType=TIMESTAMP},
      </if>
    </set>
    where id = #{id,jdbcType=BIGINT}
  </update>
  <update id="updateByPrimaryKey" parameterType="com.dafy.octopus.web.core.dto.Role" >
    update T_ROLE
    set role_name = #{roleName,jdbcType=VARCHAR},
      status = #{status,jdbcType=CHAR},
      `desc` = #{desc,jdbcType=VARCHAR},
      create_time = #{createTime,jdbcType=TIMESTAMP},
      update_time = #{updateTime,jdbcType=TIMESTAMP}
    where id = #{id,jdbcType=BIGINT}
  </update>

  <select id="getRoleByUserId" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select r.* from T_ROLE r inner join T_USER_ROLE ur on r.id=ur.role_id where ur.user_id=#{userId}
  </select>

  <select id="getAllRoles" resultMap="BaseResultMap">
    select DISTINCT r.* from T_ROLE r
  </select>
</mapper>